
alias ll='ls -lah --color=auto'

alias cdd='cd ~/Downloads'
alias cdD='cd ~/Documents'
alias cdh='cd ~/workspace/h2g'
alias cdhk='cd ~/workspace/h2g/klett'
alias cdp='cd ~/workspace/personal'

alias cdnc='cd ~/.config/nvim'

alias git-fu='git add . && git commit --amend --no-edit && git push origin $(git rev-parse --abbrev-ref HEAD) -f'
alias git-fp='git fetch origin && git remote prune origin'

alias fs='fd --type f --hidden --exclude .git | fzf-tmux -p | xargs nvim'
alias ds='fd --type d --maxdepth 1 | fzf-tmux -p | xargs nvim'

alias vim='nvim'

